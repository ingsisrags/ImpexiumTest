@page "{id}"
@model AdminWebSite.Pages.Products.ProductModel

<form method="post">
    <div class="form-row">
        <div class="form-group col-md-9">
            <label for="inputProductName">Product Name</label>
            <input type="text" class="form-control" id="inputProductName" asp-for="Product.Name">
        </div>
        <div class="form-group col-md-3">
            <label for="inputPrice">Quantity</label>
            <input type="number" class="form-control" id="inputQuantity" asp-for="Product.Quantity">
        </div>
    </div>
    <div class="form-group">
        <label for="inputDescription">Description</label>
        <input type="text" class="form-control" id="inputDescription" placeholder="Product Description Here" asp-for="Product.Description">
    </div>
    <div class="row justify-content-between px-3">
        <button class="btn btn-danger" asp-page-handler="Delete" type="submit">Delete</button>
        <button type="submit" class="btn btn-primary" asp-page-handler="Update">Update</button>
    </div>
</form>