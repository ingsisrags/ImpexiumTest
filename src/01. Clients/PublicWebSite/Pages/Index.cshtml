@page
@using System.Security.Claims
@model PublicWebSite.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="text-center">
    <h1 class="display-4">Welcome to the Store</h1>
</div>
<br />
<div class="row">
    <p class="h4">Here find the Products Available!!</p>
</div>
@if (Model.Products.Any())
{<div class="row">
        @foreach (var product in Model.Products)
        {
            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 d-inline-flex align-items-stretch p-3">
                <div class="card shadow">
                    <img src="images/placeholder.png" class="card-img-top" alt="placeholder image">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <h3 class="card-title">@product.Name</h3>
                            <h3 class="card-title">@product.Quantity</h3>
                        </div>
                        <p class="card-text">@product.Description</p>
                    </div>
                </div>
            </div>

        }
    </div>
}
else
{
    <div class="text-center">
        <p>No product found.</p>
    </div>
}
